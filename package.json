{
  "name": "@haensl/koa-health",
  "version": "1.0.0",
  "description": "Application health/readiness management and Koa routes.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint '**/*.js'",
    "lint:junit": "eslint --format junit -o test-results/eslint/results.xml '**/*.js'",
    "prepare": "if [ \"${NODE_ENV}\" != 'production' ] && [ -z \"${CI}\" ]; then husky install; fi",
    "test": "jest --runInBand --no-cache --colors --passWithNoTests",
    "test:junit": "jest --runInBand --no-cache --ci --reporters='default' --reporters='jest-junit' --passWithNoTests",
    "tdd": "jest --runInBand --colors --watch"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 11
    },
    "extends": [
      "@haensl"
    ]
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "package.test"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "jest-junit": {
    "outputDirectory": "test-results/jest",
    "outputName": "results.xml",
    "suitName": "@haensl/koa-health unit tests"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/haensl/koa-health.git"
  },
  "keywords": [
    "koa",
    "health",
    "readiness",
    "ready",
    "routes",
    "application",
    "health",
    "endpoints"
  ],
  "author": {
    "name": "HP Dietz",
    "url": "https://hpdietz.com",
    "twitter": "@h_p_d",
    "email": "h.p.dietz@gmail.com"
  },
  "funding": "https://github.com/sponsors/haensl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/haensl/koa-health/issues"
  },
  "homepage": "https://github.com/haensl/koa-health#readme",
  "devDependencies": {
    "@haensl/eslint-config": "^1.4.6",
    "eslint": "^8.43.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0"
  },
  "dependencies": {
    "@haensl/environments": "^1.0.1",
    "@haensl/http": "^1.0.0"
  }
}
